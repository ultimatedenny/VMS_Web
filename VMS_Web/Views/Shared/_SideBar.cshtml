<!-- sidebar menu: : style can be found in sidebar.less -->
@model IEnumerable<VMS.Web.Models.MenulistDto>
<ul class="sidebar-menu" data-widget="tree">
    <li class="header">MAIN NAVIGATION</li>
    @if (Model != null)
    {
        foreach (var item in Model.Where(m => m.MenuParent == "AR"))
        {
            if (Model.Where(m => m.MenuParent == item.MenuCode).Count() < 1)
            {
                <li>
                    <a href="@Url.Action(@item.MenuAction, @item.MenuController)" class="Navigation">
                        <i class="fa @item.MenuIcon"></i> <span>@item.MenuName</span>
                    </a>
                </li>
            }
            else
            {
                <li class="treeview">
                    <a href="#">
                        <i class="fa @item.MenuIcon"></i>
                        <span>@item.MenuName</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                    <ul class="treeview-menu" >
                        @foreach (var subitem in Model.Where(m => m.MenuParent == item.MenuCode))
                        {
                            <li>
                                <a href="@Url.Action(@subitem.MenuAction, @subitem.MenuController)" class="Navigation">
                                    <i class="fa @subitem.MenuIcon"></i> @subitem.MenuName
                                </a>
                            </li>
                        }
                    </ul>
                </li>
            }
        }
    }
    <li>
        <a href="@Url.Action("Logout", "Home")" class="Navigation">
            <i class="fa fa-user-times fa-2x"></i><span style="padding-left:20px;font-size:14px;">Sign Out</span>
        </a>
    </li>
</ul>
