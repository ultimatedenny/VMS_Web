<script>
    $(function () {
        $("#PlantId").on('change', function () {
            var data = $(this).find("option:selected").val();
            filldepartemen(data);
            var s = '<option value="">Select Approver</option>';
            $("#Approver").html(s);
        });
    });
    $(function () {
        $("#UseDep").on('change', function () {
            var data = $(this).find("option:selected").val();
            var data2 = $("#PlantId").val();
            fillapprover(data, data2);
        });
    });
    function filldepartemen(data) {
        $.ajax({
            url: '@Url.Action("GetDepartmentforDDList", "MasterData")' + "?Plant=" + data,
            type: 'GET',
            success: function (jsonRes) {
                console.log(jsonRes[i]);
                var s = '<option value="">Select Department</option>';
                for (var i = 0; i < jsonRes.length; i++) {
                    s += '<option value="' + jsonRes[i].Dept + '">' + jsonRes[i].DeptName + '</option>';
                }
                $("#UseDep").html(s);
                var date = $("#Date1").val();
                var time1 = $("#Time1").val();
                var time2 = $("#Time2").val();
            }
        });
    }
    function fillapprover(data, data2) {
        $.ajax({
            url: '@Url.Action("getApproverList3", "MasterData")' + "?Dept=" + data + "&Plant=" + data2,
            type: 'GET',
            success: function (jsonRes) {
                console.log(jsonRes[i]);
                //var s = '<option value="-1">Select Approver</option>';
                var s;
                for (var i = 0; i < jsonRes.length; i++) {
                    s += '<option value="' + jsonRes[i].UseId + '">' + jsonRes[i].UseNam + '</option>';
                }
                $("#Approver").html(s);
            }
        });
    }
    $(function () {
        $('#DateFormat').datetimepicker({
            format: 'YYYY-MM-DD'
        });
    });
    $(function () {
        $('#InFormat').datetimepicker({
            format: 'HH:mm',
            stepping: 15,
            //minDate: moment({ h: 8 }),
            //maxDate: moment({ h: 17 }),
            useCurrent: false
        });
    });
    $(function () {
        $('#OutFormat').datetimepicker({
            format: 'HH:mm',
            stepping: 15,
            //minDate: moment({ h: 8 }),
            //maxDate: moment({ h: 17 }),
            useCurrent: false
        });
    });
    $(function () {
        $('#OTHFormat').datetimepicker({
            format: 'HH:mm',
            stepping: 15,
            //minDate: moment({ h: 8 }),
            //maxDate: moment({ h: 17 }),
            useCurrent: false
        });
    });
    $(document).on('click', 'a.deleteItem', function (e) {
        e.preventDefault();
        var $self = $(this);
        if ($(this).attr('data-itemId') == "0") {
            $(this).parents('tr').css("background-color", "#ff6347").fadeOut(800, function () {
                $(this).remove();
            });
        }
    });
    function CompTransChange() {
        var A = $("#CompTrans").val();
        if (A == "true") {
            $('#driverTimeDiv').show();
        }
        else {
            $('#driverTimeDiv').hide();
        }
    }
    function OTHSelected()
    {
        var A = $("#CompTransTime").val();
        if (A == "OTH")
        {
            $('#OTHFormat').show();
        }
        else {
            $('#OTHFormat').hide();
        }
    }
    function saveOrder(data) {
        document.getElementById("saveOrder").disabled = true;
        return $.ajax({
                contentType: 'application/json; charset=utf-8',
                dataType: 'json',
                type: 'POST',
                url: '@Url.Action("SaveOrderMobile", "ExitPermit", new { area=""})',
                data: data,
                success: function (result) {
                    if (result == "SUCCESS") {
                        swal({
                            title: "SUCCESS", icon: "success", text: "Your Exit Permit has been submitted. Track the status from Pocket-Pal History", type:
                                "success"
                        }).then(function () {
                            location.reload();
                            document.getElementById("saveOrder").disabled = false;
                        }
                        );
                    }
                    else {
                        swal({
                            title: "Error", icon: "error", text: result, type:
                                "error"
                        }).then(function () {
                            document.getElementById("saveOrder").disabled = false;
                        }
                        );
                    }
                }
            });
    }
    function clearItem() {
        $("#UseId").val('');
    }
    function check() {
        if (document.getElementById("option1").checked == true) {
            $('#DIV2').hide();
            $('#DIV1').show();
        }
        else {
            $('#DIV1').hide();
            $('#DIV2').show();
        }
    }
    function check2() {
        if (document.getElementById("option2").checked == true) {
            $('#DIV1').hide();
            $('#DIV2').show();
        }
        else {
            $('#DIV2').hide();
            $('#DIV1').show();
        }
    }
</script>
<script type="text/javascript">
